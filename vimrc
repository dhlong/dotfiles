set nocompatible

filetype indent plugin on

syntax on

set hidden

set wildmenu

set showcmd

set hlsearch

set backspace=indent,eol,start

set autoindent

set nostartofline

set ruler

set laststatus=2

set confirm

set visualbell

set t_vb =

set number relativenumber

set notimeout ttimeout ttimeoutlen=200

set shiftwidth=4
set softtabstop=4
set expandtab

nnoremap <C-L> :nohl<CR><C-L>



